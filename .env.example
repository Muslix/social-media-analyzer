# Social Media Market Impact Analyzer - Example Environment
# Copy to `.env` and adjust values for your deployment.

# ── Core App Settings ───────────────────────────────────────────────
APPNAME=Social Media Market Analyzer
ENV=DEV
LOG_LEVEL=INFO
REPEAT_DELAY=780
REPEAT_MIN_DELAY=420
REPEAT_MAX_DELAY=900
BLOCKED_BACKOFF_MIN=900
BLOCKED_BACKOFF_MAX=1800
EMPTY_FETCH_THRESHOLD=3
EMPTY_FETCH_BACKOFF_MULTIPLIER=1.8
ACCEPT_LEGAL_DISCLAIMER=false

# ── Truth Social Monitoring ─────────────────────────────────────────
# Supply a comma-separated list (without @) to watch multiple accounts.
TRUTH_USERNAMES=
# Legacy fallback if you only want a single account:
TRUTH_USERNAME=
TRUTH_INSTANCE=truthsocial.com
POST_TYPE=post

# ── X / Twitter (via Nitter) ────────────────────────────────────────
X_ENABLED=false
X_USERNAMES=

# RSS feeds (semicolon separated label|url entries)
RSS_FEEDS=
RSS_FEED_LOCATIONS=

# ── Database ────────────────────────────────────────────────────────
MONGO_DBSTRING=mongodb://mongodb:27017/
MONGO_DB=truthsocial
MONGO_COLLECTION=posts
MONGO_ANALYSIS_COLLECTION=analysis_results
MONGO_BLOCK_HISTORY_COLLECTION=scraper_block_history

# ── Quiet Hours Configuration (optional) ──────────────────────────────────────
# Format: LABEL|Timezone|start-end[,start-end]; separate entries with ';'
# Example: US|America/New_York|00:00-06:00;EU|Europe/Berlin|02:00-05:00
QUIET_HOURS=
QUIET_HOURS_DEFAULT_LOCATION=
TRUTH_ACCOUNT_LOCATIONS=
X_ACCOUNT_LOCATIONS=

# ── Output / Persistence ────────────────────────────────────────────
ENABLE_FILE_EXPORT=false

# ── FlareSolverr (Cloudflare bypass helper) ────────────────────────
FLARESOLVERR_ENABLED=true
FLARESOLVERR_ADDRESS=flaresolverr
FLARESOLVERR_PORT=8191
FLARESOLVERR_URL=http://flaresolverr:8191
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# ── Discord Notifications (optional) ───────────────────────────────
DISCORD_NOTIFY=false
DISCORD_USERNAME=Market Impact Bot
DISCORD_WEBHOOK_URL=
DISCORD_ALL_POSTS_WEBHOOK=
DISCORD_ALL_POSTS_USERNAME=Posted But Not Relevant
LLM_ERROR_WEBHOOK_URL=

# ── LLM / Ollama (optional) ────────────────────────────────────────
OLLAMA_MODEL=llama3.2:3b
OLLAMA_URL=http://ollama:11434
OLLAMA_NUM_THREADS=4
# For Docker container to reach host Ollama (optional override)
# DOCKER_OLLAMA_URL=http://host.docker.internal:11434

# ── OpenRouter LLM (remote provider) ────────────────────────────────
# Enable to route analysis through OpenRouter instead of Ollama.
OPENROUTER_ENABLED=
OPENROUTER_API_KEY=
OPENROUTER_MODEL=
OPENROUTER_URL=
OPENROUTER_REFERER=
OPENROUTER_TITLE=
OPENROUTER_TIMEOUT=
OPENROUTER_MIN_INTERVAL=
