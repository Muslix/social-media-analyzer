# Social Media Market Impact Analyzer - Example Environment
# Copy to `.env` and adjust values for your deployment.

# ── Core App Settings ───────────────────────────────────────────────
APPNAME=Social Media Market Analyzer
ENV=DEV
LOG_LEVEL=INFO
REPEAT_DELAY=300
ACCEPT_LEGAL_DISCLAIMER=false

# ── Truth Social Monitoring ─────────────────────────────────────────
# Supply a comma-separated list (without @) to watch multiple accounts.
TRUTH_USERNAMES=
# Legacy fallback if you only want a single account:
# TRUTH_USERNAME=example_user
TRUTH_INSTANCE=truthsocial.com
POST_TYPE=post

# ── X / Twitter (via Nitter) ────────────────────────────────────────
X_ENABLED=false
X_USERNAMES=

# ── Database ────────────────────────────────────────────────────────
MONGO_DBSTRING=mongodb://mongodb:27017/
MONGO_DB=truthsocial
MONGO_COLLECTION=posts
MONGO_ANALYSIS_COLLECTION=analysis_results

# ── Output / Persistence ────────────────────────────────────────────
ENABLE_FILE_EXPORT=false

# ── FlareSolverr (Cloudflare bypass helper) ────────────────────────
FLARESOLVERR_ENABLED=true
FLARESOLVERR_ADDRESS=flaresolverr
FLARESOLVERR_PORT=8191
FLARESOLVERR_URL=http://flaresolverr:8191
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# ── Discord Notifications (optional) ───────────────────────────────
DISCORD_NOTIFY=false
DISCORD_USERNAME=Market Impact Bot
DISCORD_WEBHOOK_URL=
DISCORD_ALL_POSTS_WEBHOOK=
DISCORD_ALL_POSTS_USERNAME=Posted But Not Relevant

# ── LLM / Ollama (optional) ────────────────────────────────────────
OLLAMA_MODEL=llama3.2:3b
OLLAMA_URL=http://ollama:11434
OLLAMA_NUM_THREADS=4
